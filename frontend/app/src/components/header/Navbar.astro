---
import { $user } from "../../stores/userStore";
import { logOut } from "../../services/auth";

const userState = $user.get();
const user = userState?.data;
---

<header
  class="flex-col bg-primary/45 text-white backdrop-blur fixed top-0 left-0 right-0 z-10 px-6 py-6 font-semibold"
>
  <div class="flex justify-between items-center">
    <div class="logo">
      <a href="/">WS</a>
    </div>

    <!-- Boton Hamburguesa (mobile) -->
    <button
      id="menu-btn"
      class="md:hidden flex items-center px-3 py-2 border rounded text-white border-white"
      aria-label="Open menu"
    >
      <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>

    <!-- Navbar (desktop) -->
    <nav aria-label="Navbar" class="hidden md:block">
      <ul class="flex gap-8">
        <li><a href="/" class="hover:text-black transition">Home</a></li>
        <li><a href="#product-list" class="hover:text-black transition">Spaces</a></li>
        <li><a href="/contact" class="hover:text-black transition">Contact Us</a></li>
        <div>
          {
            user ? (
              <>
                <li>
                  <a href="/profile">Profile</a>
                  <span>Hi, {user.email}</span>
                </li>
                <li>
                  <button id="logout-btn">
                    <a href="/logout">Logout</a>
                  </button>
                </li>
              </>
            ) : (
              <li>
                <a href="/login">Login/Register</a>
              </li>
            )
          }
        </div>
      </ul>
    </nav>
  </div>

  <nav id="mobile-menu" class="md:hidden hidden mt-4">
    <ul class="flex flex-col gap-4">
      <li><a href="/" class="hover:text-black transition">Home</a></li>
      <li><a href="#product-list" class="hover:text-black transition">Spaces</a></li>
      <li><a href="/contact" class="hover:text-black transition">Contact Us</a></li>
      <div>
        {
          user ? (
            <>
              <li>
                <a href="/profile">Profile</a>
                <span>Hi, {user.email}</span>
              </li>
              <li>
                <button id="logout-btn-mobile">
                  <a href="/logout">Logout</a>
                </button>
              </li>
            </>
          ) : (
            <li>
              <a href="/login">Login/Register</a>
            </li>
          )
        }
      </div>
    </ul>
  </nav>
  <div class="bg-white w-full h-[2px] mt-2"></div>
</header>

<script>
  import { logOut } from "../../services/auth";

  const logoutBtn = document.getElementById("logout-btn");
  logoutBtn?.addEventListener("click", async (e) => {
    e.preventDefault();
    await logOut();
    window.location.href = "/login";
  });

  const logoutBtnMobile = document.getElementById("logout-btn-mobile");
  logoutBtnMobile?.addEventListener("click", async (e) => {
    e.preventDefault();
    await logOut();
    window.location.href = "/login";
  });

  const menuBtn = document.getElementById("menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");
  menuBtn?.addEventListener("click", () => {
    mobileMenu.classList.toggle("hidden");
  });
</script>
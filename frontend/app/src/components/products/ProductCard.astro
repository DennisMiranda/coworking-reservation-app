---
import type { Product } from "../../models/product";
import { Icon } from "astro-icon/components";
const { id, title, address, capacity, price, image } = Astro.props as Product;
---

<div
  class="bg-white rounded-xl shadow p-4 flex flex-col gap-2"
  data-id={id}
  data-title={title}
  data-address={address}
  data-capacity={capacity}
  data-price={price}
  data-image={image}
>
  <img src={image} alt={title} class="rounded-xl w-full h-48 object-cover" />

  <h3 class="text-lg font-semibold">{title}</h3>
  <p class="text-sm text-primary">{address}</p>

  <div class="flex gap-4 text-primary text-sm">
    <span class="flex items-center gap-2">
      <Icon name="people" size={18} />
      {capacity} people
    </span>
    <span class="flex items-center gap-2">
      <Icon name="price" size={16} />
      {price} / hour
    </span>
  </div>

  <a
    href={`/products/${id}`}
    class="mt-2 bg-primary text-white py-2 rounded-full hover:bg-primary/80 text-center"
  >
    Booking
  </a>
</div>

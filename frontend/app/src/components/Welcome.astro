---
import { Icon } from "astro-icon/components";
---

<div id="hero" class="bg-cover bg-center w-full h-screen rounded-b-2xl">
  <div
    class="h-full text-white bg-black/60 gap-10 text-center flex flex-col justify-center"
  >
    <div class="flex flex-col items-center">
      <Icon name="workspace" size={90} class="mx-auto items-center" />
      <h1 class="text-8xl font-bold px-10">Work Space</h1>
    </div>
    <p class="text-4xl font-semibold px-10 italic">
      Find Your Next Coworking Space
    </p>
  </div>
</div>

<style>
  #hero {
    background-image: url("/src/icons/fondoHero.jpg");
  }
</style>

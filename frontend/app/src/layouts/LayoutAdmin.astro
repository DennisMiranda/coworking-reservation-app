---
import "../styles/global.css";

export interface Props {
  title?: string;
}

const { title = "Admin Dashboard" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Admin Dashboard - Coworking Reservations" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="min-h-screen bg-gray-50">
      <!-- Admin Header -->
      <header class="bg-white shadow-sm border-b">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex justify-between items-center h-16">
            <!-- Logo y Dashboard -->
            <div class="flex items-center">
              <div class="flex items-center space-x-2">
                <div class="w-8 h-8 bg-primary rounded-full flex items-center justify-center">
                  <span class="text-white font-bold text-sm">WS</span>
                </div>
                <span class="text-xl font-semibold text-gray-900">Dashboard</span>
              </div>
            </div>

            <!-- User Info -->
            <div class="flex items-center space-x-4">
              <span class="text-gray-700 font-medium">Work Space Administrator</span>
              <div class="w-8 h-8 bg-gray-800 rounded-full flex items-center justify-center">
                <span class="text-white text-sm">ðŸ‘¤</span>
              </div>
            </div>
          </div>
        </div>
      </header>

      <!-- Admin Navigation -->
      <nav class="bg-white shadow-sm border-b">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex space-x-8">
            <a 
              href="/admin" 
              class="border-b-2 border-primary text-primary py-4 px-1 text-sm font-medium"
            >
              Dashboard
            </a>
          </div>
        </div>
      </nav>

      <!-- Main Content -->
      <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
        <slot />
      </main>
    </div>
  </body>
</html>
